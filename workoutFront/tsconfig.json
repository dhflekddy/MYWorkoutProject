{
  "compilerOptions": {
    "baseUrl":"./src",//다른 파일에서 상대경로를 절대경로로 바꾸어 주는 역할
    "paths": {
      "@hooks/*": ["hooks"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts"],
      "@views/*": ["views/*"],
      "@utils/*": ["utils/*"],
      // "@utils/*": ["utils/*"],
      "@typings": ["typings"],
      "@constant":["constant"],
      "@types/*":["types/*"],
    },
  
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,

    "lib": ["ES2020","DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "Node",
      "target": "es5",
      "esModuleInterop": true
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  // "include": [
  //   "src"
  //   // "src/**/*"
  // ]
}
